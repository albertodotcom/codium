
<%= form_for(@post,html: {:role => 'form', :class => 'form'}) do |f| %>
<div class="form-group">
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title, :placeholder => 'title', required: true, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :subtitle, 'Subtitle' %>
  <%= f.text_field :subtitle, :placeholder => 'subtitle', :class => "form-control"  %>
</div>

<div class="form-group">
  <%= f.label :tag_list, 'Tags (separated by commas)' %>
  <%= f.text_field :tag_list, :placeholder => "tag your post eg 'ruby, rails'", :class => "form-control"  %>
</div>

<div class="form-group">
  <%= f.label :body, 'Body' %>
  <%= f.text_area :body, :placeholder => 'body', :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.submit "Save Draft", value: 'Draft', :class => "btn btn-default " %>
  <%= f.submit "Publish", value: 'Publish', :class => "btn btn-default " %>
</div>
<% end %>
