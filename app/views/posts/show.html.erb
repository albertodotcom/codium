<div id="viewpost">

  <div class="post_title"><%= "#{@post.title}" %></div>
  <div class="post_subtitle"><%= @post.subtitle %></div>

  <div id="postbody">
    <%= @post.body %>

    <p class="createdat"><%= @post.created_at %></p>
  </div>

  

  <div class="comments"> <!-- all comments -->
  	
  	<% @comments.each do |comment| %>

	  <div class="comment"> <!-- individual comment div -->
	  
	    <h4><%= comment.title%></h4>
	    <p><%= comment.content%></p> <!-- truncate this  -->
	    <p>Posted by <em><%= comment.user.email %></em> on <em><%= comment.created_at.to_formatted_s(:short)%></em></p>

	    <!-- add delete link -->

	  </div> <!-- end individual comment div -->

  	<% end %>

  </div> <!-- end all comments -->

  <h5>Add a Comment:</h5>

  <div class="comment_form">

  	
  </div>


</div>

