<% @jobs.each do |job| %>
	<div id="job">
		<h2><%= link_to job.name, user_job_path(current_user,job)%></h2>
		<p><%= job.location %></p>
		<p><%= job.deadline %></p>
		<p><%= link_to 'Edit', edit_user_job_path(current_user,job), class:'btn btn-default' %></p>
		<p><%= link_to 'Delete', user_job_path(current_user,job), class:'btn btn-default', method: 'delete' %></p>
	</div>



<% end %>

<% if current_user %>
	<p><%= link_to 'Add a Job', new_user_job_path(current_user), class:'btn btn-default' %></p>
<% end %>
