<script>
$(document).ready(function(){
	var $affixTop = $('#affix');
	var $imageHeight = $('#slide1').height();

	$(window).on('scroll', function(){
		if (this.scrollY >= $imageHeight) {
			$affixTop.slideDown(200);
		}
		if (this.scrollY <= $imageHeight) {
			$affixTop.hide();
		}	
	});
});
</script>

<script>
$(document).ready(function(){
	$('html, body').animate({ scrollTop: 0 }, 'slow');
});
</script>

<style>
#affix { display: none; position: fixed; top: 0;}
