<div class="container-fluid students-container">
	<div class="row">
		<div class="col-sm-3">
			<h2 class="name">WDI <br/>Students</h2>
		</div>
		
		<% @users.each do |user| %>
		<div id="student" class="col-sm-3 student-image" style="background-image: url(<%= user.image.exists? ? user.image.url : "/assets/placeholder.png" %>);">
 			<div class="place"><h3 class="name"><%= link_to "#{user.given_name} #{user.family_name}", user_path(user) %></h3>
			<p class="title"><%= user.tagline %></p>
			</div>
		</div>
		<% end %>

	</div>
</div>